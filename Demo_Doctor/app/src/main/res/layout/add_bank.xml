<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_add_a">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy_add_bank"
        android:layout_below="@+id/title_fragment_content"
        android:layout_above="@+id/again_btn"
        android:layout_marginTop="@dimen/y20"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/again_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/blue_add"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>