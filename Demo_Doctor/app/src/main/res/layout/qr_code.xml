<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray_add_a"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@id/title_fragment_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/y24"
        android:background="@drawable/ewmmpbj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的二维码名片"
            android:textSize="15.3sp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/y17"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/y120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.fanwang.demo_doctor.custom.XCRoundImageView
                android:src="@drawable/ewmmptx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="徐世杰"
                android:gravity="center"
                android:layout_marginTop="@dimen/y10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ewm_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/y45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#e7475e"
                android:text="扫一扫上面的二维码让我们的团队成为您的私人医生"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>