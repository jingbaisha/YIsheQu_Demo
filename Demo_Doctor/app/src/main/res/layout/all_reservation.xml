<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="患者名字"
            android:textSize="14.5sp"
            android:textColor="@color/userblack"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="@dimen/x306"
            android:layout_height="@dimen/y59"
            android:hint="输入患者名字"
            android:textSize="10.5sp"
            android:paddingLeft="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/yuan_white" />

        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="带服务"
                android:textSize="11.5sp"
                android:button="@null"
                android:drawablePadding="@dimen/x2"
                android:textColor="@color/userblack"
                android:drawableLeft="@drawable/radio_button_onclik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="已服务"
                android:button="@null"
                android:textSize="11.5sp"
                android:drawablePadding="@dimen/x2"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x27"
                android:drawableLeft="@drawable/radio_button_onclik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/x28"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/y59"
                android:hint="请选择日期"
                android:textSize="10.5sp"
                android:gravity="center"
                android:paddingRight="@dimen/x10"
                android:drawableRight="@drawable/qbyyrl"
                android:background="@drawable/yuan_white" />
            <TextView
                android:text="至"
                android:textSize="10.5sp"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/y59"
                android:hint="请选择日期"
                android:textSize="10.5sp"
                android:gravity="center"
                android:paddingRight="@dimen/x10"
                android:drawableRight="@drawable/qbyyrl"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/yuan_white" />

            <Button
                android:background="@drawable/yuan_blue_add_a"
                android:layout_width="wrap_content"
                android:text="筛选"
                android:gravity="center"
                android:textSize="10.5sp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/x20"
                android:layout_height="@dimen/y60" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_outpatient"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="门诊服务"
                android:gravity="center"
                android:background="@drawable/bg_tv_serve"
                android:textColor="@drawable/tv_color_serve"
                android:layout_height="@dimen/y60" />
            <TextView
                android:id="@+id/tv_open_serve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="上门服务"
                android:gravity="center"
                android:textColor="@drawable/tv_color_serve"
                android:background="@drawable/bg_tv_serve"
                android:layout_height="@dimen/y60" />
            <TextView
                android:id="@+id/tv_serve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="服务包"
                android:gravity="center"
                android:textColor="@drawable/tv_color_serve"
                android:background="@drawable/bg_tv_serve"
                android:layout_height="@dimen/y60" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_serve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>