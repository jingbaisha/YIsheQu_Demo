            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="@dimen/x126"
                    android:layout_height="wrap_content"
                    android:text="服务类型:" />

                <TextView
                    android:layout_width="@dimen/x487"
                    android:layout_height="@dimen/y60"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x46"
                    android:background="@drawable/yuan_white"
                    android:drawableRight="@drawable/zzrz_01"
                    android:gravity="center_vertical"
                    android:hint="上门打针"
                    android:paddingLeft="@dimen/x20"
                    android:textSize="11.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/textblack9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="@dimen/x126"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="服务简介:" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y166"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/y46"
                    android:layout_marginTop="@dimen/y14"
                    android:background="@drawable/yuan_white"
                    android:textSize="10.5sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/textblack9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务图片"
                    android:textColor="@color/userblack"
                    android:textSize="13.5sp" />

                <LinearLayout
                    android:id="@+id/linear_Img"
                    android:layout_width="@dimen/x140"
                    android:layout_height="@dimen/y120"
                    android:layout_marginLeft="@dimen/y42"
                    android:layout_marginTop="@dimen/y44"
                    android:background="@color/white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jia_tupian" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y300"
                    android:layout_marginTop="@dimen/y28"
                    android:background="@mipmap/ic_launcher"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/textblack9" />

