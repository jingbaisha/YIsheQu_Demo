<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_margin="@dimen/x4">

                <com.fanwang.demo_doctor.custom.XCRoundImageView
                    android:layout_marginTop="@dimen/y17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="13.5sp"
                    android:textColor="@color/userblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王小波" />

                <LinearLayout
                    android:id="@+id/tv_linear_all"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x26"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_data"
                        android:text="2018-2-3"
                        android:textSize="10.5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="18:34"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_toRightOf="@+id/tv_data"
                        android:textSize="10.5sp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25">

                <TextView
                    android:id="@+id/tv_doctor"
                    android:textSize="10.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好的,非常感谢" />

            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>

</LinearLayout>