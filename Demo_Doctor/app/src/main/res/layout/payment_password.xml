<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_add_a"
    android:orientation="vertical">


    <LinearLayout
        android:id="@id/title_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y128"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x124"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:text="旧密码:"
            android:textColor="@color/userblack" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y68"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/yuan_white"
            android:drawablePadding="10dp"
            android:paddingLeft="@dimen/x10"
            android:hint="@string/regist_password_1"
            android:maxLength="15"
            android:phoneNumber="true"
            android:textSize="10.5sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y46"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x124"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:text="新密码:"
            android:textColor="@color/userblack" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y68"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/yuan_white"
            android:drawablePadding="10dp"
            android:paddingLeft="@dimen/x10"
            android:hint="@string/regist_password_2"
            android:maxLength="15"
            android:phoneNumber="true"
            android:textSize="10.5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y46"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x124"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:text="确认密码:"
            android:textColor="@color/userblack" />

        <EditText
            android:id="@+id/ok_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y68"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/yuan_white"
            android:drawablePadding="10dp"
            android:paddingLeft="@dimen/x10"
            android:hint="@string/regist_password_3"
            android:maxLength="15"
            android:phoneNumber="true"
            android:textSize="10.5sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y204"
        android:background="@drawable/yuan_blue_a"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>