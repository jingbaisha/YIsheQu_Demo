<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center"
        android:background="#23b1a5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_home_saoyisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y23"
            android:background="@drawable/lingdangd"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.fanwang.demo_doctor.custom.XCRoundImageView
                android:layout_marginLeft="@dimen/x40"
                android:layout_width="@dimen/y140"
                android:layout_height="@dimen/y140"
                android:src="@drawable/grzxtx" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x40"
                    android:gravity="center"
                    android:text="吴恩达"
                    android:textColor="@color/userblack"
                    android:textSize="17.5sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x40"
                    android:gravity="center"
                    android:text="吴恩达"
                    android:layout_marginTop="@dimen/x20"
                    android:textColor="@color/red"
                    android:textSize="10.5sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y60"
            android:textColor="@color/black_add"
            android:layout_marginRight="@dimen/y37"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="精神科主治医院"
            android:textSize="12.5sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy_my"
        android:layout_marginTop="@dimen/y20"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>