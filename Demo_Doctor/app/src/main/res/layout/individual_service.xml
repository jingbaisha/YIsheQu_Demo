<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_tab_signed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:padding="10dp"
        tl:tl_indicator_color="@color/blue_add"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/blue_add"
        tl:tl_textUnselectColor="@color/userblack" />

    <android.support.v4.view.ViewPager
        android:id="@+id/stl_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>