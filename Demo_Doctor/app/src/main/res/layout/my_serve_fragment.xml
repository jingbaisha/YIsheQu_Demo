<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="@dimen/x23"
        android:layout_marginLeft="@dimen/x23"
        android:layout_marginTop="@dimen/y22"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Linear_online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x4"
            android:layout_weight="1"
            android:background="@drawable/fw_04"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fw_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线服务"
                    android:textColor="@color/white"
                    android:textSize="15.3sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/x12"
            android:id="@+id/Linear_My_appointment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x4"
            android:layout_weight="1"
            android:background="@drawable/fw_05"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_yuyue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fw_02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部预约"
                    android:textColor="@color/white"
                    android:textSize="15.3sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/x12"
            android:id="@+id/Linear_My_service_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x4"
            android:layout_weight="1"
            android:background="@drawable/fw_06"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_service_packge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务包"
                    android:textColor="@color/white"
                    android:textSize="15.3sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/yuan_white"
        android:text="今日计划"
        android:gravity="center"
        android:textSize="15.3sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60" />

    <LinearLayout
        android:layout_marginTop="@dimen/y18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_outpatient"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="门诊服务"
            android:gravity="center"
            android:background="@drawable/bg_tv_serve"
            android:textColor="@drawable/tv_color_serve"
            android:layout_height="@dimen/y60" />
        <TextView
            android:id="@+id/tv_open_serve"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="上门服务"
            android:gravity="center"
            android:textColor="@drawable/tv_color_serve"
            android:background="@drawable/bg_tv_serve"
            android:layout_height="@dimen/y60" />
        <TextView
            android:id="@+id/tv_serve"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="服务包"
            android:gravity="center"
            android:textColor="@drawable/tv_color_serve"
            android:background="@drawable/bg_tv_serve"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_serve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>