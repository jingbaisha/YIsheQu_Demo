<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/x29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.fanwang.demo_doctor.custom.XCRoundImageView
                    android:src="@drawable/wdsrqb"
                    android:layout_width="@dimen/x128"
                    android:layout_height="@dimen/y128" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x22"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="余额"
                        android:textSize="17.3sp"
                        android:textStyle="bold"
                        android:textColor="@color/userblack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="¥254"
                        android:textSize="17.3sp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="@dimen/x44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_tixian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:background="@drawable/yuan_blue"
        android:gravity="center"
        android:layout_margin="@dimen/x40"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>