<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_add_a"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy_personal_data"
        android:layout_above="@+id/again_btn"
        android:orientation="vertical"
        android:layout_below="@+id/title_fragment_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/again_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/blue_add"
        android:gravity="center"
        android:text="重新认证"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>